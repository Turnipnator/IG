# IG Markets API Configuration
IG_API_KEY=your_api_key_here
IG_USERNAME=your_username_here
IG_PASSWORD=your_password_here
IG_ACC_TYPE=DEMO

# Telegram Bot Configuration (set TELEGRAM_ENABLED=false to run without Telegram)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_ENABLED=true

# Trading Configuration
RISK_PER_TRADE=0.01
MAX_POSITIONS=5
TRADING_ENABLED=true

# API Rate Limiting (IG has 10,000 data points/week limit)
# CHECK_INTERVAL: minutes between market checks (60 = 1 hour)
# PRICE_DATA_POINTS: historical candles to fetch (50 saves allowance vs 100)
# CACHE_TTL_MINUTES: how long to cache price data before re-fetching
CHECK_INTERVAL=60
PRICE_DATA_POINTS=50
CACHE_TTL_MINUTES=55

# Logging Configuration
LOG_LEVEL=INFO
